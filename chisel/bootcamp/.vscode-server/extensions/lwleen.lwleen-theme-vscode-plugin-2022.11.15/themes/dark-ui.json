{
	/*======================  护眼主题——深色 ========================= 
	*/
	"$schema": "vscode://schemas/color-theme",
	"name": "浅蓝色界面主题",
	"type": "light",
	"include": "./2深色-语法配色.json",                         //引用自定义语法配色

	"colors":{ 
		/*
			窗体色彩
			38393C(菜单+)       8d8d8d(强烈分割线+)      252526(窗体) dddddd     
			1e1e1e(代码背景)     AAB0B6(选中词+)       999999(行号)
			8d8d8d(匹配词)      970272(错误)            2193f0(标记)
		*/
		
		//1 悬浮控件背景=============================================
		"menu.background":"#252526",                     //悬浮菜单背景色   ------菜单栏
		//"menu.foreground":"#000000",                     //悬浮菜单前景色 
		"editorHoverWidget.background": "#252526",       //悬浮控件背景  ----编辑区
		"editorSuggestWidget.background": "#252526",
		//"editorHoverWidget.foreground": "#000000",
		"editorHoverWidget.border": "#8d8d8d",           //悬浮控件边框   
		"editorSuggestWidget.border": "#8d8d8d",         //悬浮建议边框
		//"list.highlightForeground": "#003ec4",           //匹配字体颜色   ---编辑区，输入提示
	    //配置弹出的下拉菜单 和 左侧资源管理器栏里菜单
		"list.activeSelectionBackground":"#38393C",      //左侧 资源管理器栏里
	  //  "list.activeSelectionForeground": "#000000",
		"list.inactiveSelectionBackground": "#38393C69", //未激活菜单背景
	//	"list.inactiveSelectionForeground": "#000000",
	//	"list.errorForeground": "#970272",               //出现错误	 
		"list.inactiveFocusBackground": "#38393C",
		
		"list.hoverBackground": "#38393C42",             //鼠标移动背景色   ----面包屑栏下拉菜单
		"list.focusBackground": "#38393C69",             //聚焦背景色
		
		"focusBorder": "#38393C98",                      // 窗口聚焦时边框
		
		//2 全局边框 =============================================== 
		"window.activeBorder": "#797a7a",                //全局边框-------------

		//3 菜单栏 标签栏 面包屑栏 ======================================
	//	"titleBar.activeForeground": "#000000",
		"titleBar.activeBackground": "#38393C",          //最顶菜单背景
		"titleBar.inactiveBackground": "#38393C",
	    
		"tab.hoverBorder": "#7f7f80",
		"tab.hoverBackground": "#38393C62",              // 标签鼠标悬停时颜色
	//	"tab.hoverForeground": "#000000",
		"tab.inactiveBackground":"#252526",              // 非活动的标签颜色
	//	"tab.inactiveForeground": "#000000",
	    "tab.activeBackground":"#38393C62",              //活动标签背景色
	//	"tab.activeForeground": "#000000",               //激活的 字体 前景色
		"tab.border": "#38393C",                         // 标签两边竖线---------
		"editorGroupHeader.tabsBackground": "#252526",   // 非活动右侧便签颜色
		//3.5 面包屑栏
		"breadcrumb.background": "#252526",              //面包屑栏背景
	//	"breadcrumb.foreground":"#000000",               //面包屑栏
		"breadcrumbPicker.background":"#252526",         //下拉背景色

		"editorGroupHeader.border": "#8d8d8d",           //标签栏和编辑区分割线  分割线-------
		"scrollbar.shadow": "#38393C",                   //上面分割线的阴影
		"editorGroup.dropBackground": "#82838659",       //拖动界面  分屏颜色多屏

		//4 编辑区=================================================
	//	"editor.foreground":"#000000",                     //前景色
		"editor.background":"#1e1e1e",                     //编辑区背景色 
	//	"editor.lineHighlightBackground": "#E4E4E4",       //高亮行    ---- 当前行----===================
		"editor.lineHighlightBorder": "#e4e4e42f",           //高亮行边框 ———— 当前行背景-----
		"editor.selectionBackground": "#add6ff3b",         //选中词颜色 ———— 选区 —————
		"editor.findMatchBackground": "#97027238",           //当前选中的搜索词的颜色
		"editor.selectionHighlightBackground": "#f1be3346",  //相同匹配词的颜色
		"editor.inactiveSelectionBackground":"#8d8d8d49",    //窗口失去焦点，选中的颜色
	//	"editorCursor.foreground": "#000000",              //光标颜色
		"editor.findMatchHighlightBackground": "#f1be3346",  //相同匹配词的颜色
		"editorBracketMatch.background":"#f1be3346",         //括号背景
		"editorUnicodeHighlight.border": "#ff0000",        //中英符号错用高亮边框
		//4.5 行号所在区域
	//	"editorLineNumber.foreground": "#999999b0",        //行号颜色
	//	"editorLineNumber.activeForeground": "#000000",    //活动行号突出显示
		"editorGutter.background": "#252526",              //行号背景
		"editorGutter.modifiedBackground": "#252526",      //行号右边的 内容标记
		"editorIndentGuide.background":"#99999927",        //缩进线颜色非激活------
		"editorIndentGuide.activeBackground":"#9999996c",    //当前激活的缩进线------
	//	"debugIcon.breakpointForeground":"#2193f0",        //断点标记
	//	"editorGutter.foldingControlForeground": "#000000",//折叠标记
		"editor.foldBackground": "#38393C3d",              //折叠后的背景

		"diffEditor.border": "#8d8d8d",                    // 多个编辑器的分割线 ----------

        //5 活动栏 最左侧栏 + 资源管理器栏================================
		"activityBar.background": "#252526",              //最左活动栏
		"activityBar.activeBorder": "#b1b1b1",
		"activityBar.foreground": "#bbbbbb",              //最左活动栏图标颜色
		"activityBarBadge.background":"#2193f08c",          //最左活动栏 通知标记 颜色
		"activityBarBadge.foreground": "#8d8d8d",
		"badge.background": "#2193f09d",                  //侧边栏上 标记为保存 小圆球
	//	"badge.foreground":"#ffffff",                     //小圆球中数字
		"activityBar.border": "#99999927",                //边框 分割线--------------
      
		//5.5 活动栏资源管理栏
	//	"sideBarTitle.foreground": "#000000",             //管理 最上面的标题颜色 
		"sideBar.background": "#252526",                  //最左侧边栏 展开背景
	//	"sideBar.foreground": "#000000",                  //活动栏 字体颜色
		"sideBar.border": "#99999927",                    //活动栏 边框分割线---------------
        "sideBarSectionHeader.background": "#252526",     //活动栏 分类条的背景

		//6 右侧缩略图滑块===============================================
		"minimap.background": "#252526",                   //缩略图背景
		"minimapSlider.activeBackground": "#38393Cab",     //点击激活滑块颜色
		"minimapSlider.hoverBackground": "#38393Cab",
		"minimapSlider.background": "#38393C70",            
		"minimap.selectionHighlight": "#00728f",           //当前行标记 
 
		//7 最右侧上下滑动块==============================================
		"scrollbarSlider.background": "#cac9c92f",          //滑块颜色
		"scrollbarSlider.hoverBackground": "#e4e4e42f",  
		"scrollbarSlider.activeBackground": "#e4e4e44f",    //点击滑块激活颜色
		//7.5  上下滑块的底部
		"editorOverviewRuler.background": "#252526",        //滑块条背景
	//	"editorOverviewRuler.selectionHighlightForeground": "#38393C9f",   //选中词
	//	"editorOverviewRuler.findMatchForeground": "#8d8d8d9d",              //搜索词
	//	"editorOverviewRuler.currentContentForeground": "#0423c086",
		 
		//8 最底部栏   状态栏=======================================
		"statusBar.noFolderBackground" : "#38393C",   //单文件状态栏
		"statusBar.background": "#38393C",            //最底状态栏颜色
	//	"statusBar.foreground": "#000000",            //最底状态栏前景颜色
		"statusBar.border": "#38393C",                //底部状态栏分割线--------
		
		//9 下方终端 输出 控制台栏
		"panel.background": "#252526",                //最底部控制台
		"panel.border": "#8d8d8d",                    //控制台边框
		"panelTitle.activeBorder": "#8d8d8d",         //标题下划线颜色

		"input.border": "#8d8d8d",                    //输入窗口边框
		"input.background": "#252526",                //输入窗口背景
	//	"input.placeholderForeground": "#0000007e",   //输入框的悬浮字体

		"dropdown.background": "#252526",             //底部终端选择框  右上角的那个
		"dropdown.border": "#8d8d8d"

	},
   
}